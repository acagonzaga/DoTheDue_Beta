<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keziandre.dothedue.MainActivity"
    android:background="#9FAAAB"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical">

        <!--Back Button and Header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<ImageButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/home"-->
                <!--android:backgroundTint="#fff"-->
                <!--android:id="@+id/settings_backBtn"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#c9c7c7"
            android:layout_gravity="center">

        </View>

        <!--IF NO DUES TO DO-->
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="NO DUES TO DO"-->
        <!--android:textSize="30sp"-->
        <!--android:gravity="center"-->
        <!--android:layout_weight="1"/>-->


        <!--OPTION 1-->

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_task">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <!--NAVIGATION BAR-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="3dp"
        android:background="#eaa872">

        <ImageButton
            android:id="@+id/ibHome_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            android:backgroundTint="#eaa872"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/ibHome_new"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/new1"
            android:backgroundTint="#eaa872"
            android:layout_weight="1"
            android:tint="#4b4949"/>

        <ImageButton
            android:id="@+id/ibHome_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/settings"
            android:backgroundTint="#eaa872"
            android:layout_weight="1"
            android:tint="#4b4949"/>

    </LinearLayout>

</LinearLayout>
